[{:name :property
  :desc "Join to block by property or property value"
  :rule
  [(property ?b ?property-name ?property-value)
   [?b :block/properties ?p]
   [(get ?p ?property-name) ?property-value]]}

 {:name :page-ref
  :desc "Blocks tagged with page/tag ref"
  :rule
  [(page-ref ?b ?tag)
   [?b :block/path-refs ?b2]
   [?b2 :block/name ?tag]]}
 ]
