#!/usr/bin/env bash

ROOT_DIR="$(dirname "$0")/.."
if [ "$1" == "-h" ] || [ "$1" == "--help" ] || [ "$1" == "" ]; then
  bb --config $ROOT_DIR/lq-bb.edn tasks
elif command -v bb-datascript &> /dev/null
then
  BABASHKA_DATASCRIPT=1 bb-datascript --config $ROOT_DIR/lq-bb.edn $@
else
  bb --config $ROOT_DIR/lq-bb.edn $@
fi
